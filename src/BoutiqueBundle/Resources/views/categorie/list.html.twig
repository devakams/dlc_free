{% extends "BoutiqueBundle::template_admin.html.twig" %}

{% block item_categorie %}active{% endblock %}

{% block breadcrumbs %}
    <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
    <li><a href="#">catégorie</a></li>
    <li class="active">Liste</li>
{% endblock %}

{% block page_title %}Liste des catégories{% endblock %}

{% block body_content %}

	<div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
            

        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
         	       <tr>
            	    	<th>N°</th>
                	  	<th>Nom</th>
                        <th></th>
                	</tr>
                </thead>
                
                <tbody>
                	{% for categorie in categories %}
	                	<tr>
	                  		<td>{{ categorie.id}}</td>
	                  		<td>{{ categorie.nom }}</td>
                            <td>
                                <a href="{{ path('boutique_categorie_show', { 'id': categorie.id }) }}" title="Afficher"><button class="btn btn-info btn-xs"><span class="glyphicon glyphicon-list"></span></button></a>

                                <a href="{{ path('boutique_categorie_update', { 'id': categorie.id }) }}" title="Modifier"><button class="btn btn-success btn-xs"><span class="glyphicon glyphicon-edit"></span></button></a>

                                <a href="{{ path('boutique_categorie_delete', { 'id': categorie.id }) }}" title="Supprimer" data-confirm="Vous êtes sur le point de supprimer. Etes-vous sûr de bien vouloir effectué cette opération ?"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>
                             </a>
                            </td>
	                	</tr>
                	{% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="well">
    <label>Ajouter une nouvelle catégorie </label> <a href="{{ path('boutique_categorie_new') }}" title="Afficher"><button class="btn btn-success"><span class="glyphicon glyphicon-plus"></span></button></a>
    </div>
{% endblock %}