{% extends "BoutiqueBundle::template_admin.html.twig" %}

{% block item_article %}active{% endblock %}

{% block breadcrumbs %}
    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
{% endblock %}

{% block page_title %}Article{% endblock %}

{% block body_content %}

	<div class="box box-primary">
		
		<div class="box-header with-border">
			<h3 class="box-title">Modification article</h3>
		</div>

		{{ form_start(form, {'attr': {'class': 'form-horizontal', 'action': path('boutique_article_update', { "id": article.id }) }}) }}
			{{ form_errors(form) }}
			<div class="box-body">
				
					<div class="form-group">
						{{ form_label(form.designation, "Désignation", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
						{{ form_errors(form.designation) }}
						<div class="col-md-4">
						{{ form_widget(form.designation, {'attr': {'class': 'form-control', 'placeholder':'Designation'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.description, "Description", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
						{{ form_errors(form.description) }}
						<div class="col-md-4">
						{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder':'Designation'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.prix, "Prix", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
						{{ form_errors(form.prix) }}
						<div class="col-md-4">
						{{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder':'Designation'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.quantite, "Quantité", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
						{{ form_errors(form.quantite) }}
						<div class="col-md-4">
						{{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder':'Designation'}}) }}
						</div>
					</div>

					<div class="form-group">
					    {{ form_label(form.imageFile, "Image", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
					    {{ form_errors(form.imageFile) }}
					    <div class="col-sm-4">
					        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
					    </div>
					</div>
			</div>

			<div class="box-footer">

		    	<div style="text-align:center;">

		    		<span>{{ form_widget(form.Valider, {'attr': {'class': 'btn btn-success'}}) }}</span>
					<span>{{ form_widget(form.Annuler, { 'attr': {'class': 'btn btn-warning'}}) }}</span>

                </div>
			</div>
			{{ form_rest(form) }}

			{# Fermeture de la balise <form> du formulaire HTML #}
		{{ form_end(form) }}
	</div>
{% endblock %}