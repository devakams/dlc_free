{% extends ":default:admin.html.twig" %}

{% block item_produit %}active{% endblock %}

{% block breadcrumbs %}
    <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
    <li><a href="#">produit</a></li>
    <li class="active">Liste</li>
{% endblock %}

{% block page_title %}Produit{% endblock %}

{% block body_content %}

	<div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des produits</h3>
        </div>
            

        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
         	       <tr>
            	    	<th>N°</th>
                	  	<th>Nom</th>
                        <th>Description</th>
                        <th>Producteur</th>
                        <th>Département</th>
                        <th>Contact</th>
                        <th>Disponibilité</th>
                	</tr>
                </thead>
                
                <tbody>
                	{% for produit in produits %}
	                	<tr>
	                  		<td>{{ produit.id}}</td>
	                  		<td>{{ produit.nom }}</td>
                            <td>{{ produit.description }}</td>
                            <td>{{ produit.producteur }}</td>
                            <td>{{ produit.departement }}</td>
                            <td>{{ produit.contact }}</td>
                            <td>{{ produit.disponibilite }}</td>
	                	</tr>
                	{% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}