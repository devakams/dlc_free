{% extends "AdminBundle::template.html.twig" %}

{% block item_message %}active{% endblock %}

{% block breadcrumbs %}
    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
{% endblock %}

{% block page_title %}Détails du message{% endblock %}

{% block body_content %}

	<div class="row">
		<div class="content">
			
				<div class="box box-solid">
				   
				    <div class="box-body" style="font-size:15px;">
				    	<dl>
				        	<dt>Nom</dt>
				        	<dd>{{ message.nom }}</dd>

				        	<dt>Prénom</dt>
				        	<dd>{{ message.prenom }}</dd>

				        	<dt>Email</dt>
				        	<dd>{{ message.email }}</dd>

				        	<dt>Message</dt>
				        	<dd>{{ message.message }}</dd>

				        	<dt>date</dt>
				        	<dd>{{ message.dateRecu|date("d-m-Y à H:i:s") }}</dd>

				      	</dl>
				    </div>
				</div>

		</div>
	</div>

{% endblock %}