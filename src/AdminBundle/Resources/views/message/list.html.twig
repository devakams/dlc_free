{% extends "AdminBundle::template.html.twig" %}

{% block item_message %}active{% endblock %}

{% block breadcrumbs %}
    <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
    <li><a href="#">message</a></li>
    <li class="active">Liste</li>
{% endblock %}

{% block page_title %}Message des internautes{% endblock %}

{% block body_content %}

	<div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des messages</h3>
        </div>
            

        <div class="box-body">

            <table id="example1" class="table table-bordered table-striped">

                <thead>
         	       <tr>
            	    	<th>N°</th>
                	  	<th>Prénom</th>
                        <th>Nom</th>
                        <th>E-mail</th>
                        <th>Message</th>
                        <th>Date</th>
                        <th></th>
                	</tr>
                </thead>
                
                <tbody>
                	{% for message in messages %}
	                	<tr>
	                  		<td>{{ message.id }}</td>
	                  		<td>{{ message.prenom }}</td>
                            <td>{{ message.nom }}</td>
                            <td>{{ message.email }}</td>
                            <td>{{ message.message }}</td>
                            <td>{{ message.dateRecu|date("d-m-Y à H:i:s") }}</td>
                            <td>

                                <a href="{{ path('admin_message_show', { 'id': message.id }) }}" title="Afficher"><button class="btn btn-info btn-xs"><span class="glyphicon glyphicon-list"></span></button></a>

                                <a href="{{ path('admin_message_delete', { 'id': message.id }) }}" title="Supprimer" data-confirm="Vous êtes sur le point de supprimer. Etes-vous sûr de bien vouloir effectué cette opération ?"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>
                                </a>

                            </td>
	                	</tr>
                	{% endfor %}
                </tbody>

            </table>
            
        </div>
    </div>

{% endblock %}