{% extends "RestaurationBundle::template_admin.html.twig" %}

{% block item_restaurant %}active{% endblock %}

{% block breadcrumbs %}
    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
{% endblock %}

{% block page_title %}Modification restaurant{% endblock %}

{% block body_content %}
	<div class="box box-primary">
		
		<div class="box-header with-border">
			<h3 class="box-title">Modification restaurant</h3>
		</div>

		{{ form_start(form, {'attr': {'class': 'form-horizontal', 'action': path('restauration_restaurant_update', { "id": restaurant.id }) }}) }}
			{{ form_errors(form) }}
			<div class="box-body">
				
				<div class="form-group">
					{{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
					{{ form_errors(form.nom) }}
					<div class="col-md-4">
					{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder':'Nom'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.description, "Description", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
					{{ form_errors(form.description) }}
					<div class="col-md-4">
					{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder':'Département'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.departement, "Département", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
					{{ form_errors(form.departement) }}
					<div class="col-md-4">
					{{ form_widget(form.departement, {'attr': {'class': 'form-control', 'placeholder':'Département'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
					{{ form_errors(form.adresse) }}
					<div class="col-md-4">
					{{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder':'Adresse'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.contact, "Contact", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
					{{ form_errors(form.contact) }}
					<div class="col-md-4">
					{{ form_widget(form.contact, {'attr': {'class': 'form-control', 'placeholder':'Contact'}}) }}
					</div>
				</div>

				<div class="form-group">
				    {{ form_label(form.imageFile, "Image", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
				    {{ form_errors(form.imageFile) }}
				    <div class="col-sm-4">
				        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
					
			</div>

			<div class="box-footer">

		    	<div style="text-align:center;">

		    		<span>{{ form_widget(form.Valider, {'attr': {'class': 'btn btn-success'}}) }}</span>
					<span>{{ form_widget(form.Annuler, { 'attr': {'class': 'btn btn-warning'}}) }}</span>

                </div>
			</div>
			{{ form_rest(form) }}

			{# Fermeture de la balise <form> du formulaire HTML #}
		{{ form_end(form) }}
	</div>
{% endblock %}