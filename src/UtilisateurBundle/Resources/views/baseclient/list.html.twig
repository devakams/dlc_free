{% extends "UtilisateurBundle::template_admin.html.twig" %}



{% block breadcrumbs %}
    <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
    <li><a href="#">Client</a></li>
    <li class="active">Liste</li>
{% endblock %}

{% block page_title %}Clients{% endblock %}

{% block body_content %}

	<div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des clients</h3>
        </div>
            

        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
         	       <tr>
            	    	<th>N°</th>
                	  	<th>Prénom</th>
                        <th>Nom</th>
                        <th>Date inscription</th>
                        <th></th>
                	</tr>
                </thead>
                
                <tbody>
                	{% for client in clients %}
	                	<tr>
	                  		<td>{{ client.id}}</td>
	                  		<td>{{ client.prenom }}</td>
                            <td>{{ client.nom }}</td>
                            <td>{{ client.dateInscrit|date("d-m-Y H:i:s") }}</td>
                            <td>
                                <a href="{{ path('utilisateur_client_show', { 'id': client.id }) }}" title="Afficher"><button class="btn btn-info btn-xs"><span class="glyphicon glyphicon-list"></span></button></a>

                                <a href="{{ path('utilisateur_client_update', { 'id': client.id }) }}" title="Modifier"><button class="btn btn-success btn-xs"><span class="glyphicon glyphicon-edit"></span></button></a>

                                <a href="{{ path('utilisateur_client_delete', { 'id': client.id }) }}" title="Supprimer" data-confirm="Vous êtes sur le point de supprimer. Etes-vous sûr de bien vouloir effectué cette opération ?"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>
                                </a>
                            </td>
	                	</tr>
                	{% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="well">
    <label>Ajouter un nouveau client </label> <a href="{{ path('utilisateur_client_new') }}" title="Afficher"><button class="btn btn-success"><span class="glyphicon glyphicon-plus"></span></button></a>
    </div>
{% endblock %}