{% extends "UtilisateurBundle::template_admin.html.twig" %}


{% block breadcrumbs %}
    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
{% endblock %}

{% block page_title %}Produit{% endblock %}

{% block body_content %}

	<div class="box box-primary">
		
		<div class="box-header with-border">
			<h3 class="box-title">Modification client</h3>
		</div>

		{{ form_start(form, {'attr': {'class': 'form-horizontal', 'action': path('utilisateur_client_update', { "id": client.id }) }}) }}
			{{ form_errors(form) }}
			<div class="box-body">
				
					<div class="form-group">
						{{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
						{{ form_errors(form.prenom) }}
						<div class="col-md-4">
						{{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder':'Prénom'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
						{{ form_errors(form.nom) }}
						<div class="col-md-4">
						{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder':'Nom'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'col-md-4 control-label', 'type': 'password'}}) }}
						{{ form_errors(form.password) }}
						<div class="col-md-4">
						{{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder':'Password'}}) }}
						</div>
					</div>


					<div class="form-group">
					    {{ form_label(form.imageFile, "Image", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
					    {{ form_errors(form.imageFile) }}
					    <div class="col-sm-4">
					        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
					    </div>
					</div>
			</div>

			<div class="box-footer">

		    	<div style="text-align:center;">

		    		<span>{{ form_widget(form.Valider, {'attr': {'class': 'btn btn-success'}}) }}</span>
					<span>{{ form_widget(form.Annuler, { 'attr': {'class': 'btn btn-warning'}}) }}</span>

                </div>
			</div>
			{{ form_rest(form) }}

			{# Fermeture de la balise <form> du formulaire HTML #}
		{{ form_end(form) }}
	</div>
{% endblock %}